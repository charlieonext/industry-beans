<link rel="stylesheet" href="{{ 'banner.css' | asset_url }}" media="print" onload="this.media='all'">
<div class="banner"> 
   {%- if section.settings.heading != blank -%}
     <div class="banner-content">
        <h1 class="banner-heading">
         {{ section.settings.heading }}
        </h1>
         <p class="banner-sub-heading">
           {{ section.settings.sub_heading }}
         </p>
     </div>
    
   {%- endif -%}
    {%- if section.settings.banner != blank -%}
          <picture>
          
          {%- if section.settings.mobile_banner != blank -%}
                <source
                    media="(max-width: 767.98px)"
                    srcset="{{ section.settings.mobile_banner | image_url: width: 343 }}"
                    width="343"
                >
            {%- endif -%}
          
            {{- section.settings.banner | image_url: width: 1384 | image_tag: loading: 'lazy', reveal-on-scroll: section.settings.reveal_on_scroll -}}
      
          </picture>
    {%- endif -%}
</div>
{% schema %}
  {
    "name": "Banner",
    "settings": [
      {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
      },
       {
          "type": "text",
          "id": "sub_heading",
          "label": "Sub heading",
          "default": "Sub heading"
      },
      {
          "type": "image_picker",
          "id": "banner",
          "label": "Banner"
      },
      {
          "type": "image_picker",
          "id": "mobile_banner",
          "label": "Mobile banner"
      }
    ],
    "presets": [
      {
        "name": "Banner",
        "category": "Text"
      }
    ]
  }
{% endschema %}

